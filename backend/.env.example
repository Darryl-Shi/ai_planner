# Server Configuration
PORT=3001
FRONTEND_URL=http://localhost:5173

# Session Secret (change this to a random string)
SESSION_SECRET=your-secret-key-change-this

# Google OAuth Credentials
# Get these from: https://console.cloud.google.com/apis/credentials
# IMPORTANT: Both redirect URIs must be registered in Google Cloud Console
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3001/api/auth/callback
GOOGLE_REDIRECT_URI_MOBILE=http://localhost:3001/api/auth/callback/mobile

# PostgreSQL Database
# Example: postgresql://username:password@localhost:5432/ai_planner
DATABASE_URL=postgresql://localhost:5432/ai_planner

# Encryption Key for API Keys (REQUIRED)
# Generate with: openssl rand -hex 32
# This MUST be a 64-character hex string (32 bytes)
ENCRYPTION_KEY=your-encryption-key-change-this

# OpenRouter Configuration (DEPRECATED - users now supply their own keys)
# These variables are no longer used by the application
# OPENROUTER_API_KEY=your-openrouter-api-key
# OPENROUTER_MODEL=anthropic/claude-3.5-sonnet
